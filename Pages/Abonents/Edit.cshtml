@page
@model lb5.Pages.Abonents.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit abonent</h1>
<form method="post">
  <div class="form-group row">
	  <label>FirstName</label>
	  <div class="col-sm-8">
		  <input asp-for="Abonent.FirstName" />
		  <span asp-validation-for="Abonent.FirstName"></span>
	  </div>
  </div>
  <div class="form-group row">
		<label>LastName</label>
		<div class="col-sm-8">
			<input asp-for="Abonent.LastName" />
			<span asp-validation-for="Abonent.LastName"></span>
		</div>
  </div>
   <div class="form-group row">
		<label>SurName</label>
		<div class="col-sm-8">
			<input asp-for="Abonent.SurName"/>
			<span asp-validation-for="Abonent.SurName"></span>
		</div>
  </div>
   <div class="form-group row">
		<label>Address</label>
		<div class="col-sm-8">
			<input asp-for="Abonent.Address"/>
			<span asp-validation-for="Abonent.Address"></span>
		</div>
  </div>
   <div class="form-group row">
		<label>Phone Number</label>
		<div class="col-sm-8">
			<input asp-for="Abonent.PhoneNumber"/>
			<span asp-validation-for="Abonent.PhoneNumber"></span>
		</div>
  </div>
  <div class="col-sm-8 pt-2">
	  <button type="submit">Edit abonent</button>
  </div>
</form>
