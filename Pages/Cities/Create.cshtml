@page
@model lb5.Pages.Cities.CreateModel
<h1>Add new city</h1>
<form method="post">
  <div class="form-group row">
	  <label>Name</label>
	  <div class="col-sm-8">
		  <input asp-for="city.Name" />
		  <span asp-validation-for="city.Name"></span>
	  </div>
  </div>
  <div class="form-group row">
		<label>Code</label>
		<div class="col-sm-8">
			<input asp-for="city.Code" />
			<span asp-validation-for="city.Code"></span>
		</div>
  </div>
   <div class="form-group row">
		<label>Tariff</label>
		<div class="col-sm-8">
			<input asp-for="city.Tariff"/>
			<span asp-validation-for="city.Tariff"></span>
		</div>
  </div>
  <div class="col-sm-8 pt-2">
	  <button type="submit">Add city</button>
  </div>
</form>
