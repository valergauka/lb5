@page
@model lb5.Pages.Cities.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit city</h1>
<form method="post">
  <div class="form-group row">
	  <label>Name</label>
	  <div class="col-sm-8">
		  <input asp-for="City.Name" />
		  <span asp-validation-for="City.Name"></span>
	  </div>
  </div>
  <div class="form-group row">
		<label>Code</label>
		<div class="col-sm-8">
			<input asp-for="City.Code" />
			<span asp-validation-for="City.Code"></span>
		</div>
  </div>
   <div class="form-group row">
		<label>Tariff</label>
		<div class="col-sm-8">
			<input asp-for="City.Tariff"/>
			<span asp-validation-for="City.Tariff"></span>
		</div>
  </div>
  <div class="col-sm-8 pt-2">
	  <button type="submit">Edit city</button>
  </div>
</form>
